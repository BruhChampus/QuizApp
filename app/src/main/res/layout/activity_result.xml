<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    android:padding="16dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ResultActivity">


    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white_light_gray"
        android:textSize="48sp"
        android:textStyle="bold"
        tools:text="Congratulations, user_name. You've completed the quizz"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginVertical="16dp"
        android:contentDescription="@string/quiz_image"
        tools:src="@drawable/ic_pink_color" />

    <TextView
        android:id="@+id/tv_your_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/yellow"
        android:textSize="48sp"
        android:textStyle="bold"
         tools:text ="Your score is: 1/10" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/light_dark_blue"
        android:text="Retry"
        android:textColor="@color/white_light_gray"
        android:textSize="42sp" />

</LinearLayout>