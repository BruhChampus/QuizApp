<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ResultActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_blue"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_congratulations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white_light_gray"
            android:textSize="32sp"
            android:textStyle="bold"
            tools:text="Congratulations, user_name. You've completed the quizz" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginVertical="16dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/quiz_image"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_confetti_trophy" />


        <TextView
            android:id="@+id/tv_your_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/yellow"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:text="Your score is: 1/10" />

        <TextView
            android:id="@+id/tv_time_spent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white_yellow"
            android:textSize="26sp"
            android:textStyle="bold"
            tools:text="Time spent: 0" />

        <Button
            android:id="@+id/btn_retry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/light_dark_blue"
            android:text="Retry"
            android:textColor="@color/white_light_gray"
            android:textSize="32sp" />
    </LinearLayout>
</ScrollView>